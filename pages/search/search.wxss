.mask{
  position: fixed;
  top: 0;
  width: 100%;
  height: 160rpx;
  background-color: lightcyan;
  z-index: 100
}
.search{
  display: flex;
  padding: 20rpx;
  width: 500rpx;
  border: 2rpx solid #ababab;
  border-radius: 50rpx;
  text-align: center;
  position: fixed;
  z-index: 101;
  left: 13%;
  top: 30rpx
}
.search .icon{
  width: 50rpx;
  height: 50rpx
}
.search .delete{
  position: absolute;
  right: 30rpx
}
.search .icon image{
  width: 100%;
  height: 100%
}
.search .input{
  width: 360rpx;
  line-height: 50rpx
}

.hotWords {
  margin-top: 160rpx;
  padding: 0 30rpx;
}

.hotWords .top {
  display: flex;
  justify-content: space-between;
}

.hotWords .top .text {
  font-size: 36rpx;
}

.hotWords .top .change {
  display: flex;
}

.hotWords .top .change .img {
  width: 36rpx;
  height: 36rpx;
  color: crimson;
}

.hotWords .top .change .img image {
  width: 100%;
  height: 100%;
}

.hotWords .top .change .word {
  line-height: 36rpx;
  color: #d81e06;
}

.hotWords .showData {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap
}

.hotWords .showData .item{
  padding: 8rpx 12rpx;
  color: white;
  font-size: 34rpx;
  border-radius: 10rpx;
  margin: 20rpx 20rpx 0 0
}

.searchHistory {
  margin: 60rpx 0;
  padding: 0 30rpx;
}

.searchHistory .top {
  display: flex;
  justify-content: space-between;
}

.searchHistory .top .text {
  font-size: 36rpx;
}

.searchHistory .top .change {
  display: flex;
}

.searchHistory .top .change .img {
  width: 36rpx;
  height: 36rpx;
  color: crimson;
}

.searchHistory .top .change .img image {
  width: 100%;
  height: 100%;
}

.searchHistory .top .change .word {
  line-height: 36rpx;
  color: #d81e06;
}

.searchHistory .showData{
  display: flex;
}

.searchHistory .showData .item{
  margin-right: 20rpx
}

.books {
  margin-top: 160rpx;
  padding: 60rpx 20rpx;
}

.books .item {
  display: flex;
  margin-bottom: 40rpx
}

.books .item .img {
  width: 270rpx;
  height: 420rpx;
}

.books .item .img image {
  width: 100%;
  height: 100%;
}

.books .item .text {
  width: 380rpx;
  color: #666;
  margin-left: 30rpx;
  position: relative
}

.books .item .text .title {
  font-weight: 700;
  font-size: 40rpx;
  color: black;
  margin-bottom: 30rpx
}

.books .item .text .author {
  width: 420rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx
}

.books .item .text .shortIntro {
  width: 420rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.books .item .text .tags {
  color: crimson;
  position: absolute;
  bottom: 0
}