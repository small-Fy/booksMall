.fixed{
  position: fixed;
  top: 0;
  z-index: 99;
  padding: 30rpx 0;
  background-color: #eee;
  width: 100%;
}
.rankType {
  display: flex;
  /* line-height: 120rpx */
}
.rankType .item {
  margin: 0 30rpx;
  font-size: 30rpx;
}

.rankType .item .default {
  color: #333;
}

.rankType .item .font {
  color: red;
  font-weight: 700;
}

.categories {
  width: 100%;
  white-space: nowrap;
  margin-top: 40rpx;
}

.categories .item {
  display: inline-block;
  margin: 0 30rpx;
  font-size: 30rpx;
}

.categories .item .default {
  color: #333;
}

.categories .item .font {
  color: red;
  font-weight: 700;
}

.showData {
  margin-top: 200rpx;
  padding: 60rpx 20rpx
}

.showData .item {
  display: flex;
  margin-bottom: 40rpx
}

.showData .item .img {
  width: 270rpx;
  height: 420rpx;
}

.showData .item .img image {
  width: 100%;
  height: 100%;
}

.showData .item .text {
  width: 380rpx;
  color: #666;
  margin-left: 30rpx;
  position: relative
}

.showData .item .text .title {
  font-weight: 700;
  font-size: 40rpx;
  color: black;
  margin-bottom: 30rpx
}

.showData .item .text .author {
  width: 420rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx
}

.showData .item .text .shortIntro {
  width: 420rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.showData .item .text .tags {
  display: flex;
  position: absolute;
  bottom: 0
}
.showData .item .text .tags .tag{
  display: flex;
  color: white;
  font-size: 26rpx;
  text-align: center;
  /* width: 120rpx */
}
.showData .item .text .tags .tag .interception{
  background-color:#ff8c00;
  width: 110rpx;
  border-radius: 10rpx;
  padding: 10rpx 16rpx
}
.showData .item .text .tags .tag .interception1{
  background-color:#00ced1;
  width: 110rpx;
  border-radius: 10rpx;
  padding: 10rpx 16rpx;
  margin: 0 10rpx
}
.showData .item .text .tags .tag .interception2{
  background-color:#ff4500;
  width: 110rpx;
  border-radius: 10rpx;
  padding: 10rpx 16rpx
}
